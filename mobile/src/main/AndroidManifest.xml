<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wisdm.cis.fordham.edu.actitracker" >

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UsernameActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskSelectionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TaskFragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SensorLogActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity>
            android:name=".SensorSetting"
            android:screenOrientation="portrait">
        </activity>
    

        <service
            android:name=".PhoneSensorLogService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
